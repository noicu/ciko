{
  "name": "ts-package-template",
  "version": "1.0.0",
  "description": "TypeScript NPM Package Template",
  "author": "Sidharth Rathi",
  "license": "MIT",
  "source": "./src/index.ts",
  "unpkg": "dist/index.umd.js",
  "main": "dist/index.umd.js",
  "module": "dist/index.modern.module.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sidwebworks/ts-package-template.git"
  },
  "keywords": [
    "boilerplate",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/sidwebworks/ts-package-template/issues"
  },
  "homepage": "https://github.com/sidwebworks/ts-package-template#readme",
  "scripts": {
    "build": "microbundle",
    "dev": "microbundle watch",
    "test": "jest --config jest.config.js",
    "lint": "xo src tests",
    "format": "xo src tests --fix",
    "prepack": "rm -rf dist && yarn build",
    "release": "yarn prepack && np"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/parser": "^4.5.0",
    "eslint": "^7.11.0",
    "eslint-plugin-jest": "^24.1.0",
    "jest": "^26.6.0",
    "microbundle": "^0.14.2",
    "np": "^7.6.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3",
    "xo": "^0.47.0"
  },
  "dependencies": {},
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "mjs": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ]
    },
    "ignores": [
      "node_modules",
      "dist"
    ],
    "plugins": [
      "jest"
    ],
    "extends": [
      "plugin:jest/recommended"
    ]
  }
}
